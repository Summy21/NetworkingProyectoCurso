<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_space"
    android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/fotoImageView"
                android:layout_width="wrap_content"
                android:layout_height="384dp"
                android:layout_gravity="center"
                android:background="@color/colorAccent"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tituloTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Titulo"
                android:textColor="@color/colorPrimaryDarkText"
                android:textSize="@dimen/textTitleBig" />

            <TextView
                android:id="@+id/gestionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="gestion"
                android:textColor="@color/colorSecondaryDarkText"
                android:textSize="@dimen/textSmall" />

            <TextView
                android:id="@+id/resumenTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:text="resumen"
                android:textColor="@color/colorPrimaryDarkText"
                android:textSize="@dimen/textSmall" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:onClick="actores"
                android:text="@string/actores" />
        </LinearLayout>

</ScrollView>